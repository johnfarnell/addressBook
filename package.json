{
  "name": "addressbook",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "coverage": "npm run test --coverage",
    "test": "npm run test:results -- --watchAll",
    "test:watch": "npm test --watchAll",
    "test:results": "jest --json --outputFile=.jest-test-results.json",
    "dev:build": "tsc -w",
    "dev:run": "nodemon --ignore db.json build/index.js",
    "dev": "concurrently npm:dev:*",
    "build": "tsc",
    "start": "node build/index.js",
    "buildst": "npm run build && npm run start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@types/json-server": "^0.14.2",
    "axios": "^0.21.1",
    "concurrently": "^5.2.0",
    "json-server": "^0.16.1",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "jest": "^26.1.0",
    "jest-mock-extended": "^1.0.9",
    "sinon": "^9.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  }
}